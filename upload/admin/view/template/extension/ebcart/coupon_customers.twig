<div class="table-responsive">
	<table class="table table-bordered table-hover">
		<thead>
			<tr>
				<td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\').prop('checked', this.checked);" /></td>
				<td class="text-left sortorder">{% if sort == 'cp.name' %}
					<a href="{{ sort_name }}" class="{{ order|lower }}">{{ column_name }}</a>
					{% else %}
					<a href="{{ sort_name }}">{{ column_name }}</a>
					{% endif %}</td>
				<td class="text-left sortorder">{% if sort == 'cp.code' %}
					<a href="{{ sort_code }}" class="{{ order|lower }}">{{ column_code }}</a>
					{% else %}
					<a href="{{ sort_code }}">{{ column_code }}</a>
					{% endif %}</td>
				<td class="text-left sortorder">{% if sort == 'cp.date_start' %}
					<a href="{{ sort_date_start }}" class="{{ order|lower }}">{{ column_date_start }}</a>
					{% else %}
					<a href="{{ sort_date_start }}">{{ column_date_start }}</a>
					{% endif %}</td>
				<td class="text-left sortorder">{% if sort == 'cp.date_end' %}
					<a href="{{ sort_date_end }}" class="{{ order|lower }}">{{ column_date_end }}</a>
					{% else %}
					<a href="{{ sort_date_end }}">{{ column_date_end }}</a>
					{% endif %}</td>
				<td class="text-left sortorder">{% if sort == 'c.date_added' %}
					<a href="{{ sort_date_added }}" class="{{ order|lower }}">{{ column_date_added }}</a>
					{% else %}
					<a href="{{ sort_date_added }}">{{ column_date_added }}</a>
					{% endif %}</td>
				<td>Action</td>
			</tr>
		</thead>
		<tbody>
			{% if customers %}
                {% for customer in customers %}
			<tr id="{{ customer.coupon_id }}">
			    <td class="text-center"><input type="checkbox" name="selected[]" value="{{ customer.coupon_id }}" /></td>
				<td class="text-left">{{ customer.coupon_name }}</td>
				<td class="text-left">{{ customer.code }}</td>
				<td class="text-left">{{ customer.date_start }}</td>
				<td class="text-left">{{ customer.date_end }}</td>
				<td class="text-left">{{ customer.date_added }}</td>
				<td class="text-left">
				<a target="_new"  href="{{ customer.href }}" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Edit"><i class="fa fa-eye"></i></a>
				<a rel="{{ customer.coupon_id }}" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger deletecoupononebyeone"><i class="fa fa-trash-o"></i></a>
				</td>
			</tr>
			{% endfor %}
			{% else %}
			<tr>
				<td class="text-center" colspan="9">{{ text_no_results }}</td>
			</tr>
			{% endif %}
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-sm-6 text-left">{{ pagination }}</div>
	<div class="col-sm-6 text-right">{{ results }}</div>
</div>
