{{ header }}

<script>
  window._learnq = window._learnq || [];

  window._learnq.push(['track', 'Placed Order', {
    OrderID: '{{ klaviyo_order.OrderID }}',
    $value: {{ klaviyo_order.$value }},
    Currency: '{{ klaviyo_order.Currency }}'
  }]);

  console.log('Klaviyo: Placed Order with value sent');
</script>


<div class="container">
  <div class="wrapper ">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-md-9 col-sm-8' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h1 id="page-title">{{ heading_title }}</h1>
      <div class="inline-link text-center">{{ text_message }}</div>

      <div class="inline-link text-center"><img src="{{ scan }}"/></div>

      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
</div>
{{ footer }}