{% if view_popup %}
<!-- Popup -->
<script>
$(document).ready(function() {
if ($(window).width() > {{ popup_width_limit }}) {
setTimeout(function() {
$.featherlight({ajax: 'index.php?route=extension/basel/basel_features/basel_popup', variant:'popup-wrapper'});
}, {{ popup_delay }});
}
});
</script>
{% endif %}
